{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  },
  "include": ["@types", "src/**/*.ts", "test/**/*.ts", "./scripts", "./test"]
}
